          {renderStepStatus('1.     ', bank.accountsStatus, bank, 'accounts', index)}
          {bank.accountsStatus === 'connected' &&
            renderStepStatus('2.    (//)', bank.productsStatus, bank, 'products', index)}
          {(bank.accountsStatus === 'error' || bank.productsStatus === 'error') && (
            <button className="btn-secondary btn" style={{ marginTop: 12 }} onClick={() => retryBank(index)}>
              
            </button>
          )}
        </div>
      ))}
      {isFinished && (
        <div className="card">
          <h2>  !</h2>
          <p> ,    .</p>
          <button className="btn" onClick={() => navigate('/dashboard')}>
              
          </button>
        </div>
      )}
    </div>
  );
};
