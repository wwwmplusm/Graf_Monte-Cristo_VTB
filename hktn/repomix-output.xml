      {(status === 'connecting' || status === 'polling') && <span>  </span>}
      {status === 'connected' && <span style={{ color: '#16a34a', fontWeight: 600 }}> </span>}
      {status === 'error' && <span style={{ color: '#dc2626', fontWeight: 600 }}> </span>}
      {status === 'pending_approval' &&
