          <button className="btn-secondary btn" onClick={() => navigate('/banks')}>
            Выбрать другой банк
          </button>
        </div>
        {canContinue ? (
          <button className="btn" style={{ marginTop: 16 }} onClick={() => navigate('/banks/preview')}>
            Перейти к продуктам
          </button>
        ) : null}
      </div>
    </div>
  );
};
