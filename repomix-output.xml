  const [progress, setProgress] = useState(0);
  const [status, setStatus] = useState('Подключение к банкам...');

  useEffect(() => {
    const loadData = async () => {
      // Simulate loading steps
      const steps = [
        { progress: 20, status: 'Подключение к банкам...', delay: 500 },
